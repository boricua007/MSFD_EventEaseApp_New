@page "/invalid-event-id"

<div class="container text-center py-5">
    <div class="error-container">
        <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 4rem;"></i>
        
        <h2 class="text-danger mt-4">Invalid Event ID</h2>
        <p class="lead text-muted mb-4">
            The event ID you provided is not valid. Event IDs must be whole numbers.
        </p>
        
        <div class="alert alert-info">
            <strong>Valid examples:</strong> /event/1, /event/5, /event/100<br>
            <strong>Invalid examples:</strong> /event/1.5, /event/abc, /event/-1
        </div>
        
        <div class="d-flex flex-column flex-md-row gap-3 justify-content-center mt-4">
            <button class="btn btn-primary btn-lg" @onclick="GoHome">
                <i class="bi bi-house-door"></i> Go Home
            </button>
            <button class="btn btn-outline-primary btn-lg" @onclick="ViewEvents">
                <i class="bi bi-calendar-event"></i> Browse Events
            </button>
        </div>
    </div>
</div>

<style>
    .error-container {
        padding: 2rem;
        max-width: 600px;
        margin: 0 auto;
    }
</style>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    
    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }
    
    private void ViewEvents()
    {
        Navigation.NavigateTo("/events");
    }
}