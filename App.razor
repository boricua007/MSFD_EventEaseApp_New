<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <div class="container-fluid">
                <div class="row min-vh-100 align-items-center justify-content-center">
                    <div class="col-lg-6 text-center">
                        <div class="error-container">
                            <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 5rem;"></i>
                            
                            <h1 class="display-4 fw-bold text-primary mt-4">Page Not Found</h1>
                            <p class="lead text-muted mb-4">
                                The page you're looking for doesn't exist or has been moved.
                            </p>
                            
                            <div class="d-flex flex-column flex-md-row gap-3 justify-content-center">
                                <a href="/" class="btn btn-primary btn-lg">
                                    <i class="bi bi-house-door"></i> Go Home
                                </a>
                                <a href="/events" class="btn btn-outline-primary btn-lg">
                                    <i class="bi bi-calendar-event"></i> Browse Events
                                </a>
                            </div>
                            
                            <div class="mt-5">
                                <h5 class="text-muted">Popular Pages:</h5>
                                <div class="list-group list-group-flush">
                                    <a href="/" class="list-group-item list-group-item-action">
                                        <i class="bi bi-house-door me-2"></i>Home
                                    </a>
                                    <a href="/events" class="list-group-item list-group-item-action">
                                        <i class="bi bi-calendar-event me-2"></i>Browse Events
                                    </a>
                                    <a href="/counter" class="list-group-item list-group-item-action">
                                        <i class="bi bi-plus-square me-2"></i>Training
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>

<style>
    .error-container {
        padding: 2rem;
    }
    
    .list-group-item {
        border: none;
        border-radius: 8px !important;
        margin-bottom: 0.5rem;
    }
    
    .list-group-item:hover {
        background-color: var(--bs-primary-bg-subtle);
        transform: translateX(5px);
        transition: all 0.2s ease;
    }
</style>
